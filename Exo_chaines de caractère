# Compter le nombre d'it√©rations d'une lettre dans un mot

def iterations (mot):
    
    compteur = 0
    
    for lettre in mot :
        if lettre == "j" :
            compteur += 1

    return print(compteur)
           
            
iterations ("bonjour")

